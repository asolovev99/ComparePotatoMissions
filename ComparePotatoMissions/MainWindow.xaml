<Window x:Class="ComparePotatoMissions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComparePotatoMissions"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="600" MinWidth="800" MaxWidth="800" MaxHeight="600" Width="800" Height="600">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Control.FontSize" Value="18" />
            <Setter Property="Control.FontWeight" Value="Bold" />
            <Setter Property="Control.HorizontalAlignment" Value="Left" />
            <Setter Property="Control.VerticalAlignment" Value="Top" />
            <Setter Property="Control.Height" Value="40" />
        </Style>
    </Window.Resources>

    <Grid>
        <Button x:Name="BtnOpenPotatoEvent" Content="Potato event" Margin="333,264,0,0" Click="BtnOpenPotatoEvent_Click" Width="125" Height="40"/>

    </Grid>
</Window>
